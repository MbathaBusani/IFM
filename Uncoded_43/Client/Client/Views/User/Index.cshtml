@model List<User>


@{
    ViewData["Title"] = "Users";
}


<div class="container-fluid py-4">
    <!--Remove from end-->

    <div class="row">
      <div class="card">
          <!--Header for table-->
        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
          <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
            <h6 class="text-white text-capitalize ps-3">Registered Users</h6>
          </div>
        </div>
      
        <div class="card-header pb-0">
          <div class="row">
            <div class="col-lg-6 col-7">
              <a asp-controller="User" asp-action="Create"  class="btn btn-icon btn-3 btn-primary" type="button">
                <span class="btn-inner--text">Add new User</span>
              </a>
            </div>
          </div>
        </div>
      
    <div class="table-responsive">
      <table class="table align-items-center mb-0">
  
        <thead>
            <tr>
                <th>@Html.DisplayName("Id")</th>
                <th>@Html.DisplayName("Name")</th>
                <th>@Html.DisplayName("Surname")</th>
                <th>@Html.DisplayName("Institution")</th>
                <th>@Html.DisplayName("Email")</th>
                <th>Actions</th>
            </tr>
        </thead>

             <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td> @user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Surname</td>
                    <td> @user.Institution</td>
                    <td>@user.Email</td>


                    <td>
                        <div>
                            <a class="btn btn-icon btn-3 btn-primary" asp-action="Edit" asp-route-id="@user.Id" asp-controller="User">Edit </a>

                            <a class="btn btn-icon btn-3 btn-danger" asp-action="DeleteUser" asp-route-id="@user.Id" asp-controller="User"> Delete</a>
                        </div>
                    </td>

                </tr>
            }

        </tbody>
  
  

      </table>
    </div>
  </div>
  </div>
    </div>